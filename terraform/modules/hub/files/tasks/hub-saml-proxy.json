[
  {
    "name": "nginx",
    "image": "${nginx_image_and_tag}",
    "cpu": 0,
    "memory": 250,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8443,
        "hostPort": 8443
      }
    ],
    "links": ["saml-proxy"],
    "environment": [
      {
        "Name": "LOCATION_BLOCKS",
        "Value": "${location_blocks_base64}"
      }
    ]
  },
  {
    "name": "saml-proxy",
    "image": "${image_and_tag}",
    "cpu": 0,
    "memory": 3500,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 8080
      }
    ],
    "entryPoint": [
      "/verify-hub/bin/saml-proxy",
      "server",
      "/tmp/saml-proxy.yml"
    ],
    "secrets": [
      {
        "name": "SENTRY_DSN",
        "valueFrom": "arn:aws:ssm:${region}:${account_id}:parameter/${deployment}/ecs-app-shared/sentry-dsn"
      },
      {
        "name": "EVENT_EMITTER_ACCESS_KEY_ID",
        "valueFrom": "arn:aws:ssm:${region}:${account_id}:parameter/${deployment}/saml-proxy/event-emitter-access-key-id"
      },
      {
        "name": "EVENT_EMITTER_SECRET_ACCESS_KEY",
        "valueFrom": "arn:aws:ssm:${region}:${account_id}:parameter/${deployment}/saml-proxy/event-emitter-secret-access-key"
      },
      {
        "name": "EVENT_EMITTER_ENCRYPTION_KEY",
        "valueFrom": "arn:aws:ssm:${region}:${account_id}:parameter/${deployment}/saml-proxy/event-emitter-encryption-key"
      }
    ],
    "environment": [
      {
        "Name": "DEPLOYMENT",
        "Value": "${deployment}"
      },
      {
        "Name": "DOMAIN",
        "Value": "${domain}"
      },
      {
        "Name": "EVENT_EMITTER_API_GATEWAY_URL",
        "Value": "${event_emitter_api_gateway_url}"
      },
      {
        "Name": "JAVA_OPTS",
        "Value": "-Dservice.name=saml-proxy -Xms3000m -Xmx3200m -XX:+HeapDumpOnOutOfMemoryError -Dnetworkaddress.cache.ttl=5 -Dnetworkaddress.cache.negative.ttl=5"
      }
    ]
  }
]
