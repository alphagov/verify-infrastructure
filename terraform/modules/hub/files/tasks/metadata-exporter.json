[
  {
    "name": "metadata-exporter",
    "image": "${image_identifier}",
    "cpu": 448,
    "memory": 1024,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 9199,
        "hostPort": 9199
      }
    ],
    "entryPoint": [
      "bash",
      "-c",
      "bundle exec bin/prometheus-metadata-exporter -m https://${signin_domain}/SAML2/metadata/federation -p 9199 --cas /tmp/cas/${deployment}"
    ],
    "environment": [{
      "Name": "APP_ENV",
      "Value": "${environment}"
    }],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${deployment}-hub",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "metadata-exporter",
        "awslogs-create-group": "true"
      }
    }
  }
]
